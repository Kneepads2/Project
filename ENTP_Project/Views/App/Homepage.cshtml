@{
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js"></script>
    <style>
        body {
            background-color: rgb(250,250,250);
        }

        .section-top {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-evenly;
            align-items: stretch;
            align-content: center;
            margin: 70px 0px;
        }

        .schedule, .monitor, .meals {
            flex: 1; /* Equal width for all three sections */
            margin: 30px;
            padding: 30px;
            border-width: 1px;
            border-style: ridge;
            border-color: rgb(40,40,40);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .calendar {
            text-align: center;
            width: 100%; /* Ensure calendar takes full width of its parent */
            height: 100%;
        }

        .section-top h1 {
            margin: 12px;
            text-align: center;
            color: rgb(20,20,20);
            font-weight: bold;
            text-decoration: underline;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .radio-container {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 50px;
        }

        input[type="radio"] {
            display: none;
        }

        label {
            cursor: pointer;
            background-color: #eee;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            width: 100px;
            transition: background-color 0.3s ease-in-out;
        }

        input[type="radio"]:checked + label {
            background-color: #0984e3;
            color: white;
        }

        .image img {
            max-width: 100%;
            height: auto;
        }

        .stats p {
            text-align: left;
        }

        .stats p, .meals p {
            font-size: 24px;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: rgb(25,25,25);
            margin: 8px;
            
        }
    </style>
</head>
<body>
    <div class="section-top">
        <div class="schedule">
            <h1 style="text-align: center;">Schedule</h1>
            <div id="calendar" class="calendar"></div>
        </div>
        <div class="monitor">
            <h1>Fitness Monitor</h1>
            <div class="radio-container">
                <input type="radio" id="today" name="viewOption" value="daily" checked />
                <label for="today">Today</label>

                <input type="radio" id="thisWeek" name="viewOption" value="weekly" />
                <label for="thisWeek">This Week</label>

                <input type="radio" id="thisMonth" name="viewOption" value="monthly" />
                <label for="thisMonth">This Month</label>
            </div>
            <div class="stats">
                <p>Total Calories Burned: </p>
                <p>Total Steps: </p>
                <p>Time spent exercising: </p>
                <p>Weight lost: </p>
                <p>Workouts completed: </p>
                <p>Classes completed: </p>
            </div>
        </div>
        <div class="meals">
            <h1>Recommended Meals</h1>
            <p>Could do recommended meals</p>
            <p>Could do like account information??? Such as diet preference (vegan, carnivore, etc), current weight, etc</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: '/App/GetEvents'     // URL to fetch events from your controller
            });
            calendar.render();
        });
    </script>
</body>
</html>
