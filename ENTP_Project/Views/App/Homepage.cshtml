@{
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js"></script>
        <style>
            .section-top {
                display: flex;
                flex-direction: row;
                flex-wrap: wrap;
                justify-content: space-around;
                align-items: center;
                align-content: stretch;
            }

            .calendar {
                text-align: center;
                width: 30%;
                height: auto;
                margin: 15px;
                
            }
        </style>
    </head>
    <body>
        <div class="section-top">
            <div id="calendar" class="calendar"></div>
            <div><img src="https://i.ytimg.com/vi/u3Jylwpj8Ow/hqdefault.jpg?sqp=-oaymwE8CKgBEF5IWvKriqkDLwgBFQAAAAAYASUAAMhCPQCAokN4AfABAfgB_gmAAtAFigIMCAAQARhlIEUoRzAP&rs=AOn4CLCpey6LjTojxbfVXk-RsL5UszI_LQ" /></div>
            <div><img src="https://i.ytimg.com/vi/u3Jylwpj8Ow/hqdefault.jpg?sqp=-oaymwE8CKgBEF5IWvKriqkDLwgBFQAAAAAYASUAAMhCPQCAokN4AfABAfgB_gmAAtAFigIMCAAQARhlIEUoRzAP&rs=AOn4CLCpey6LjTojxbfVXk-RsL5UszI_LQ" /></div>
        </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: '/Home/GetEvents' // URL to fetch events from your controller
            });
            calendar.render();
        });
    </script>
    </body>
    
</html>