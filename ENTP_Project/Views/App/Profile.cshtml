@model ENTP_Project.Models.RegistrationModel
@{
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Takes up full viewport height */
        }

        .section {
            padding: 70px;
            width: 100%;
            max-width: 600px; /* Restrict the max width */
            background-color: #f9f9f9; /* Optional background for better visibility */
            text-align: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Optional shadow */
            border-radius: 10px; /* Rounded corners */
        }

            .section h3, .section h1, .section p {
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
                text-align: left;
            }

            .section h3 {
                padding: 10px;
                border-style: solid;
                color: rgb(25,25,25);
                border-width: 1px 0px 0px 0px;
                border-color: rgb(130,130,130);
                font-size: 24px;
            }

            .section p {
                font-size: 20px;
                margin-bottom: 30px;
            }

            .section h1 {
                font-size: 36px;
                font-weight: bold;
            }

            .section button {
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                margin-top: 25px;
                border-radius: 20px;
                font-size: 20px;
                font-weight: bold;
                background-color: rgb(102,178,255);
            }
    </style>
</head>
<body>
    <div class="center-content">
        <div class="section">
            <h1>Profile</h1>
            <p>Your information is hidden and secure. <a asp-area="" asp-controller="Home" asp-action="Privacy">Learn more</a></p>

            <h3><b>Name:</b>  @Model.Name</h3>
            <h3><b>Email:</b>  @Model.Email</h3>
            <h3><b>Phone:</b>  @Model.Phone</h3>
            <h3><b>Role:</b>  @Model.Role</h3>
            <h3><b>Dietary Restriction:</b>  @Model.Diet</h3>
            <h3 style="border-width:1px 0px 1px 0px;"><b>Fitness Plan:</b>  @Model.Plan</h3>
            <button href="#">Edit Profile</button>
        </div>
    </div>
</body>
</html>
