@{
    Layout = null;
}
<!--a logout screen-->
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: rgb(25,25,25);
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: whitesmoke;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh; 
            margin: 0;
        }

        .name h1 {
            font-size: 50px;
            font-weight: bolder;
            margin-bottom: 20px;
        }

        .goodbye h2 {
            font-size: 40px;
        }

        .goodbye h3 {
            font-size: 30px;
        }

        a {
            font-size: 30px;
            text-decoration: none;
            margin-top: 20px;
        }

        .image img {
            width: 200px; 
            height: 200px;
            margin-bottom: 30px; 
        }
    </style>
</head>
<body> <!--just a page to show user's they logged out-->
    <div class="name"> 
        <h1>Super Body Fitness</h1>
    </div>
    <div class="image">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3b/Eo_circle_green_checkmark.svg/1200px-Eo_circle_green_checkmark.svg.png" />
    </div>
    <div class="goodbye">
        <h2>You have been logged out</h2>
        <h3>Thank you</h3>
    </div>
    <div>
        <a href="/">Return to frontpage</a>
    </div>
</body>
</html>
