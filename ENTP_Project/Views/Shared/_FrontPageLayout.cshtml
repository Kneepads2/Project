<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Super Body Fitness - Custom Layout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ENTP_Project.styles.css" asp-append-version="true" />
    <style>
        .account-button {
            background-color: azure;
            font-weight: bold;
            border-radius: 20px;
            color: rgb(25,25,25);
            padding: 10px;
            font-size: 15px;
            text-decoration: none;
            margin: 10px;
            float: right;
        }

        .navbar-brand {
            font-weight: bold;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .nav-item {
            float: right;
        }

        .dropbtn {
            border: none;
            cursor: pointer;
            background-color: rgb(25,25,25);
        }

        .dropdown {
            background-color: rgb(25,25,25);
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: rgb(255,255,255);
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            opacity: 0.95;
        }

            .dropdown-content a {
                color: black;
                font-size: 20px;
                font-weight: bold;
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: rgb(200,200,200);
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .profile {
            width: 40px;
            height: 40px;
            border-radius: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav style="background-color: rgb(25,25,25);" class="navbar navbar-expand-sm navbar-dark box-shadow">
            <div class="container-fluid">
                <a style="font-size: 30px;" class="navbar-brand" href="/">Super Body Fitness</a>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a style="font-size: 20px;" class="nav-link text-bright" asp-area="" asp-controller="Home" asp-action="Index">Workouts</a>
                    </li>
                    <li class="nav-item">
                        <a style="font-size: 20px;" class="nav-link text-bright" asp-area="" asp-controller="Home" asp-action="Privacy">Meal Plans</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown" style="float: right;">
                        <button class="dropbtn">
                            <img class="profile" src="https://static.vecteezy.com/system/resources/previews/005/129/844/non_2x/profile-user-icon-isolated-on-white-background-eps10-free-vector.jpg" />
                        </button>
                        <div class="dropdown-content">
                            <a href="/App/Homepage">Home</a>
                            <a href="#">Settings</a>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            <a href="/Home/Logout">Logout</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="dropdown" style="float: right;">
                        <button class="dropbtn">
                            <img class="profile" src="https://static.vecteezy.com/system/resources/previews/005/129/844/non_2x/profile-user-icon-isolated-on-white-background-eps10-free-vector.jpg" />
                        </button>
                        <div class="dropdown-content">
                            <a href="@Url.Action("Login","Home")">Login</a>
                            <!--<a href="@@Url.Action("Login", "Home")?screen_hint=signup">Sign Up</a> -->
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>

    @RenderBody()  <!-- This will render the specific page content -->
</body>
</html>
