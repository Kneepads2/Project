@{
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
@model ENTP_Project.Models.WorkoutModel
<html>
<head>
    <style>
        body {
            background-color: rgb(35, 35, 35);
            background-image: url("https://pyxis.nymag.com/v1/imgs/78d/701/cae23671cda082ca36a23be8ad5f7aba91-adjustable-weights-048-final.rsquare.w700.jpg");
            background-size: cover;
        }

        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: auto;
        }

        input, select, textarea {
            width: 100%;
            padding: 12px;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-size: 16px;
            background-color: #fff;
        }

        .section {
            padding: 70px;
            width: 100%;
            max-width: 600px;
            background-color: #f9f9f9;
            text-align: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            height: auto;
            margin: 30px;
        }

            .section h2, .section p, .section h1 {
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
                text-align: left;
            }

            .section h2 {
                font-size: 20px;
                border-top: 1px solid rgb(130, 130, 130);
                color: rgb(25, 25, 25);
                margin-top: 25px;
                padding-top: 12px;
            }

            .section p {
                font-size: 20px;
                margin-bottom: 30px;
            }

            .section button {
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                margin-top: 25px;
                border-radius: 20px;
                font-size: 20px;
                font-weight: bold;
                background-color: rgb(102, 178, 255);
                padding: 12px 20px;
                border: none;
                color: #fff;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .section button:hover {
                    background-color: rgb(82, 158, 235);
                }

            .section h1 {
                text-align: center;
                font-size: 28px;
                font-weight: bold;
            }

        .input textarea {
            height: 150px;
            resize: vertical; /* Allow vertical resizing */
            padding: 12px;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ccc;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            transition: border-color 0.2s ease-in-out;
        }

            .input textarea:focus {
                outline: none;
                border-color: rgb(102, 178, 255);
                box-shadow: 0px 4px 12px rgba(102, 178, 255, 0.3);
            }

        .input h2 {
            margin-bottom: 10px;
        }

    </style>
</head>
<body>

    <form class="center-content" asp-action="PostWorkout" method="post">
        <div class="section">
            <h1>Profile Change Form</h1>

            <div class="input">
                <h2>Workout Title:</h2>
                <input asp-for="Title" required placeholder="Ex: Beginner Fitness" />
            </div>

            <div class="input">
                <h2>Workout Difficulty:</h2>
                <select name="Difficulty" required>
                    <option selected="selected" value="Easy">Easy</option>
                    <option value="Moderate">Moderate</option>
                    <option value="Challenging">Challenging</option>
                    <option value="Difficult">Difficult</option>
                    <option value="Intense">Intense</option>
                </select>
            </div>

            <div class="input">
                <h2>Workout Instructor:</h2>
                <input asp-for="Instructor" required placeholder="Ex: Don Qui" />
            </div>

            <div class="input">
                <h2>Workout Steps:</h2>
                <textarea class="steps" asp-for="Description" placeholder="Enter the instructions and steps for your workout"></textarea>
            </div>

            <div class="input">
                <h2>Workout Thumbnail Image:</h2>
                <input asp-for="ImageUrl" required placeholder="Ex: https://example.com/image.png" />
            </div>

            <div class="input">
                <h2>Plan:</h2>
                <select name="Plan" required>
                    <option selected="selected" value="Free">Free</option>
                    <option value="Premium">Premium</option>
                </select>
            </div>

            <button type="submit">Submit Request</button>
        </div>
    </form>
</body>
</html>
