@{
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<html>
<head>
    <style>

        body {
            background-color: rgb(50, 131, 168);
        }

        .section {
            display: flex;
            justify-content: center;
            align-items: center;
            height: auto;
        }

        .content {
            background-color: white;
            height: auto;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border: 1px solid #ddd;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            padding: 70px;
            width: 100%;
            max-width: 1200px;
            height: auto;
            margin: 30px;
        }

            .content img {
                width: 100%;
                max-width: 80%;
                max-height: 40%;
                object-fit: contain;
                border-radius: 8px;
                margin-top: 10px;
                margin-left: auto;
                margin-right: auto;
                width: 80%;
                height: 40%;
                border: 1px solid black;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            }

            .content h1 {
                text-decoration: underline;
                font-weight: bold;
            }

            .content p, h3, pre {
                text-align: left;
                font-size: 22px;
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            }
    </style>
</head>
<body>
    <div class="section">
        <div class="content">
            <h1>@Model.Title</h1>
            <img src="@Model.ImageUrl" alt="workout" />
            <h3 style="margin-top: 35px;"><b>Difficulty: </b>  @Model.Difficulty</h3>
            <h3><b>Instructor:  </b>@Model.Instructor</h3>
            <h3><b>Plan:</b>  @Model.Plan</h3>
            <h3><b>Description:</b></h3>
            <pre>@Model.Description</pre>
        </div>
    </div>
</body>
</html>